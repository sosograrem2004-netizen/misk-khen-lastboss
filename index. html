<div class="single-news" id="singleNews">
  <div class="back-btn" onclick="backToList()">โฌ ุงูุฑุฌูุน</div>
  <div class="time" id="singleTime"></div>
  <h2 id="singleTitle"></h2>
  <div class="content" id="singleText"></div>
</div>

<script>

// ุนุฑุถ ุงูุชุงุฑูุฎ ูุงูููุช ุฏุงุฎู ุงูุจุทุงูุฉ
function updateNewsTimes(){
  const newsCards = document.querySelectorAll('.news-card');

  newsCards.forEach(card=>{
    const timeBox = card.querySelector('.time');
    if(card.dataset.time && card.dataset.time.trim() !== ""){
      const dt = new Date(card.dataset.time);
      const options = { day:'2-digit', month:'long', year:'numeric' };
      const formatted = dt.toLocaleDateString('ar-DZ', options) + ' - ' + 
                        String(dt.getHours()).padStart(2,'0') + ':' + 
                        String(dt.getMinutes()).padStart(2,'0');
      timeBox.innerText = formatted;
    } else {
      timeBox.innerText = "";
    }
  });
}

// ุชุฑุชูุจ ูู ูุณู ููุญุฏู + "ูู ุงูุฃุฎุจุงุฑ"
function sortEachCategory(){
  const categories = {};
  const cards = document.querySelectorAll('.news-card');

  cards.forEach(card=>{
    const cat = card.dataset.cat;
    if(!categories[cat]){
      categories[cat] = [];
    }
    categories[cat].push(card);
  });

  for(const cat in categories){
    const sectionCards = categories[cat];
    sectionCards.sort((a,b)=>{
      return new Date(b.dataset.time) - new Date(a.dataset.time);
    });
    const container = sectionCards[0].parentElement;
    sectionCards.forEach(card=>{
      container.appendChild(card);
    });
  }

  // ุชุฑุชูุจ ุฌููุน ุงูุฃุฎุจุงุฑ ูู "ูู ุงูุฃุฎุจุงุฑ"
  const allNewsContainer = document.getElementById('newsList');
  const allCards = Array.from(document.querySelectorAll('.news-card'));
  const sortedAll = allCards.sort((a,b)=> new Date(b.dataset.time) - new Date(a.dataset.time));
  sortedAll.forEach(card=>{
    allNewsContainer.appendChild(card);
  });
}

window.onload=()=>{
  updateNewsTimes();
  sortEachCategory();

  const cards=document.querySelectorAll('.news-card');
  const list=document.getElementById('newsList');
  const single=document.getElementById('singleNews');
  const singleTitle=document.getElementById('singleTitle');
  const singleText=document.getElementById('singleText');
  const singleTime=document.getElementById('singleTime');

  cards.forEach(card=>{
    card.onclick=()=>{
      list.style.display="none";
      single.style.display="block";
      singleTitle.innerText=card.querySelector('h3').innerText;
      singleText.innerText=card.querySelector('p').innerText;
      singleTime.innerText=card.dataset.time || "";
      window.scrollTo(0,0);
    }
  });
}

// ===== ุชุนุฏูู ุฒุฑ ุงูุฑุฌูุน =====
function backToList(){
  document.getElementById('singleNews').style.display = 'none';
  document.getElementById('newsList').style.display = 'block';
}

function filterNews(cat,el){
  document.querySelectorAll('.cat').forEach(c=>c.classList.remove('active'));
  el.classList.add('active');
  const cards=document.querySelectorAll('.news-card');
  cards.forEach(card=>{
    card.style.display=(cat==="news") ? "block" : (card.dataset.cat===cat)?"block":"none";
  });
}

</script>

